<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#81BC43</item>
        <item name="colorPrimaryDark">#81BC43</item>
        <item name="colorAccent">#81BC43</item>
    </style>

    <style name="middleFont">
        <item name="android:textSize">16sp</item>
    </style>


    <!-- List -->

    <style name="ListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_list</item>
        <item name="android:background">@color/background_item</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ListFrontContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_list_front</item>
    </style>



</resources>
