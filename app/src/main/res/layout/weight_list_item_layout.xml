<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="46dp">


    <LinearLayout
        android:id="@+id/weight_title_container"
        android:layout_width="36dp"
        android:layout_height="match_parent"
        android:background="@color/weight_title"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="周一" />

        <TextView android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13" />

        <TextView
            android:id="@+id/hour_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:39" />

    </LinearLayout>

    <TextView
        android:id="@+id/weight_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/weight_title_container"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:text="@string/dialog_weight" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/weight_title"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/weight_title"
        android:text="111aaaa" />

    <TextView
        android:id="@+id/add_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="16dp"
        android:text="2015年7月13日 11:05:13" />


</RelativeLayout>
